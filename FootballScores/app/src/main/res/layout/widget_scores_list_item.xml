<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:elevation="4dp"
    android:background="@drawable/list_item">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_away_team"
        android:id="@+id/widget_away_text"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="4dp"
        android:textColor="@android:color/primary_text_light"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_home_team"
        android:id="@+id/widget_home_text"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_below="@+id/widget_away_text"
        android:textColor="@android:color/primary_text_light"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/widget_away_text"
        android:layout_toEndOf="@+id/widget_away_text"
        android:layout_toLeftOf="@+id/widget_score_layout"
        android:layout_toStartOf="@+id/widget_score_layout"
        android:id="@+id/fillView" />

    <LinearLayout
        android:id="@+id/widget_score_layout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:paddingEnd="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_score"
            android:id="@+id/widget_score_text"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp"
            android:textColor="@android:color/primary_text_light"
            android:gravity="center_horizontal"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_time"
            android:id="@+id/widget_game_time_text"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/primary_text_light"
            android:gravity="center_horizontal"
             />
    </LinearLayout>

</RelativeLayout>
